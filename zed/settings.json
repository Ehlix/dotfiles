{
  "features": {
    "inline_completion_provider": "none"
  },
  "ui_font_size": 15,
  "buffer_font_size": 14,
  "buffer_font_weight": 400,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "svart-galla-alt"
  },
  "soft_wrap": "editor_width",
  "vim_mode": true,
  "format_on_save": "off",
  "buffer_font_family": "JetBrainsMonoNL Nerd Font",
  "ui_font_family": "JetBrainsMonoNL Nerd Font",
  "preferred_line_length": 80,
  "centered_layout": {
    "left_padding": 0.2,
    "right_padding": 0.2
  },
  "buffer_line_height": {
    "custom": 1.5
  },
  "terminal": {
    "font_family": "FiraCode Nerd Font Mono"
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "gofumpt": true,
        "usePlaceholders": true,
        "staticcheck": true,
        "codelenses": {
          "gc_details": true,
          "generate": true,
          "regenerate_cgo": true,
          "tidy": true,
          "upgrade_dependency": true,
          "vendor": true
        },
        "analysis": {
          "completeUnimported": true,
          "staticcheck": true,
          "unusedParams": true,
          "unusedWrite": true
        },
        "hints": {
          "assignVariableTypes": true,
          "compositeLiteralFields": true,
          "compositeLiteralTypes": true,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true
        }
      }
    },
    "typos": {
      "initialization_options": {
        "config": ".typos.toml",
        "path": "typos-lsp",
        "diagnosticSeverity": "Error",
        "logLevel": "info",
        "trace.server": "off"
      }
    },
    "ltex": {
      "settings": {
        "ltex": {
          "language": "en, ru-RU"
        }
      }
    }
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": true
  },
  "gutter": {
    "line_numbers": true,
    "code_actions": false,
    "runnables": false,
    "folds": false
  },
  "vertical_scroll_margin": 3,
  "search": {
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": false
  },
  "autosave": "on_focus_change",
  "project_panel": {
    "button": true,
    "default_width": 240,
    "dock": "left",
    "file_icons": true,
    "folder_icons": false,
    "git_status": true,
    "indent_size": 14,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "scrollbar": {
      "show": "auto"
    }
  },
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "tabs": {
    "git_status": false,
    "close_position": "right",
    "file_icons": false
  },
  "hard_tabs": false,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "diagnostics": {
    "include_warnings": true
  },
  "experimental.theme_overrides": {
    "editor.document_highlight.read_background": "#00000000",
    "editor.document_highlight.write_background": "#00000000"
  }
}
